<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button_bk"
        android:padding="12dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/old_user_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sign_up_btn"
        android:layout_alignRight="@id/sign_up_btn"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:gravity="end"
        android:hint="Already have an Account?"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColorHint="@color/intro_title_color"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/confirm_psw_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/old_user_txtView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:hint="Confirm Password"
        android:textColorHint="@color/intro_title_color"
        android:textColor="@color/intro_title_color"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/password_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/confirm_psw_edTxt"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:hint="Password"
        android:textColorHint="@color/intro_title_color"
        android:textColor="@color/intro_title_color"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/dob_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_edTxt"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:hint="Birthday"
        android:textColorHint="@color/intro_title_color"
        android:inputType="date"
        android:textColor="@color/intro_title_color"/>

    <EditText
        android:id="@+id/phone_no_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dob_edTxt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:hint="Phone Number"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textColorHint="@color/intro_title_color"
        android:textSize="18sp"
        android:inputType="phone"
        android:textColor="@color/intro_title_color"/>

    <EditText
        android:id="@+id/email_edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone_no_edTxt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:hint="Email"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textColorHint="@color/intro_title_color"
        android:textSize="18sp"
        android:textColor="@color/intro_title_color"/>


        <EditText
            android:id="@+id/fName_edTxt"
            android:layout_height="wrap_content"
            android:layout_width="175dp"
            android:layout_above="@id/email_edTxt"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/input_design"
            android:hint="First Name"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@color/intro_title_color"
            android:textSize="18sp"
            android:textColor="@color/intro_title_color"
            ></EditText>
        <EditText
            android:id="@+id/lName_edTxt"
            android:layout_height="wrap_content"
            android:layout_width="175dp"
            android:layout_above="@id/email_edTxt"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/input_design"
            android:hint="Last Name"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@color/intro_title_color"
            android:textSize="18sp"
            android:textColor="@color/intro_title_color"></EditText>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/fName_edTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

</RelativeLayout>